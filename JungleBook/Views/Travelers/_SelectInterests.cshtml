@if (Model.ListOfHikingResults != null)
{
    @foreach (HikingResult hikingResult in Model.ListOfHikingResults)
    {
        <div class="container">
            <div class="col">
                <div class="card-columns">
                    @foreach (Trail item in hikingResult.trails)
                    {
                        <div class="card">
                            @if (item.imgSmall != null)
                            {
                                <img class="card-img-top" src="@item.imgSmall">
                            }
                            <div class="card-body">
                                <h4 class="card-title">@item.name</h4>
                                <p class="card-text">@item.summary</p>
                                <p class="card-text">@item.location</p>
                                <a href="@item.url" class="btn btn-primary">Check Their Page</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
     }
}
@if (Model.ListOfPlaceResults != null)
    @foreach (PlaceResults placeResults in Model.ListOfPlaceResults)
    {
        <div class="container">
            <div class="col">
                <div class="card-columns">
                    @foreach (Result item in placeResults.results)
                    {
                        <div class="card">
                            @if (item.icon != null)
                            {
                                <img class="card-img-top" src="@item.icon">
                            }
                            <div class="card-body">
                                <h4 class="card-title">@item.name </h4>
                                <p class="card-text">@item.rating, out of @item.user_ratings_total reviews.</p>
                            </div>
                            
                        </div>
                    }
                </div>
            </div>
        </div>
    }


</div>
